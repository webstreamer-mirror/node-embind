{
  "name": "node-embind",
  "version": "0.1.0",
  "description": "Emscripten embind for Node.JS addon",
  "main": "index.js",
  "scripts": {
    "build": "node node_modules/npmcs/bin build",
    "build:debug": "node node_modules/npmcs/bin build_debug",
    "build:release": "node node_modules/npmcs/bin build_release",

    "test": "npx mocha ./test/*.test.js",
    "test:debug": "cross-env NODE_ENV=Debug && npx mocha ./test/*.test.js  -R spec",
    "test:release": "cross-env NODE_ENV=Release && npx mocha ./test/*.test.js  -R spec"

  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com"
  },
  "keywords": [
    "embind",
    "N-API"
  ],
  "author": "Mingyi Zhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com"
  },
  "homepage": "https://github.com#readme",
  "dependencies": {
    "node-gyp": "^3.8.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "cross-env": "^5.2.0",
    "env-cmd": "^8.0.2",
    "mocha": "^5.2.0",
    "npmcs": "^1.4.2"
  }
}
